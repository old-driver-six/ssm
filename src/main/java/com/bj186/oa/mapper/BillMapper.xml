<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bj186.oa.mapper.BillMapper">    <!--命名空间在代码中要使用-->
    <resultMap id="billMap" type="Bill">
        <id property="billID" column="billID"></id>
        <result property="seatID" column="seatID"></result>
        <result property="allPrice" column="allPrice"></result>
        <result property="date" column="date"></result>
        <result property="staffID" column="staffID"></result>
        <result property="state" column="state"></result>
        <collection  property="foodSet" resultMap="com.bj186.oa.mapper.BillFoodMapper.billFoodMap">
        </collection>
    </resultMap>
    <select id="selectBillById" parameterType="long" resultMap="billMap">
       SELECT * FROM (SELECT a.*,b.bfID,b.foodID,b.number FROM bill a left join billfood b on a.billID = b.billID) a left join food b on a.foodID = b.foodID where a.billID = #{id}
    </select>
</mapper>
