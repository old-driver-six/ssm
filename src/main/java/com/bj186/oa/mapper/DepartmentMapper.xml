<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bj186.oa.mapper.DepartmentMapper">    <!--命名空间在代码中要使用-->
    <resultMap id="departmentMap" type="Department">
        <id property="id" column="dep_id"></id>
        <result property="name" column="dep_name"></result>
        <collection  property="employees" ofType="Employee" javaType="ArrayList">
            <id property="id" column="emp_id"></id>
            <result property="name" column="emp_name"></result>
        </collection>
    </resultMap>
    <select id="selectDepartmentById" parameterType="int" resultMap="departmentMap">
       SELECT * FROM employee a left join department b on a.dep_id = b.dep_id where b.dep_id = #{id}
    </select>
</mapper>
