<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bj186.oa.mapper.EmployeeMapper">    <!--命名空间在代码中要使用-->
    <resultMap id="employeeMap" type="Employee">
        <id property="id" column="emp_id"></id>
        <result property="name" column="emp_name"></result>
        <association property="department" resultMap="com.bj186.oa.mapper.DepartmentMapper.departmentMap"></association>
    </resultMap>
    <select id="selectEmployeeById" parameterType="int" resultMap="employeeMap">
       SELECT * FROM employee a left join department b on a.dep_id = b.dep_id where a.emp_id = #{id}
    </select>
</mapper>
